@page
@model SURenew.Pages.AdminPortalModel
@{
    ViewData["Title"] = "AdminPortal";
}

    <head>
        <script src="https://kit.fontawesome.com/a076d05399.js"></script>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/AdminStyle.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </head>

<div class="card-columns">
    <div class="card">
        <div class="row">
            <div class="col-sm-auto">
                <i class="fa fa-user" id="UserIcon" aria-hidden="true"></i>
            </div>
            <div class="col-sm-auto">
                <p class="card-text">Active Users</p>
                <h4>28</h4>
                
            </div>
        </div>
    </div>
    <div class="card">
        <div class="row">
            <div class="col-sm-auto">
                <i class="fa fa-check-circle" id="CheckPost" aria-hidden="true"></i>
            </div>
            <div class="col-sm-auto">
                <p class="card-text">Active Posts</p>
                <h4>79</h4>
                
            </div>
        </div>
    </div>
    <div class="card">
        <div class="row">
            <div class="col-sm-auto">
                <i class="fa fa-flag" id="FlagedPost" aria-hidden="true"></i>
            </div>
            <div class="col-sm-auto">
                <p class="card-text">Reported Posts</p>
                <h4>8</h4>
                
            </div>
        </div>
    </div>

</div>

