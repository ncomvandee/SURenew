@page
@model SURenew.Pages.DefaultLoginModel
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LoginStyle.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<br />
<br />
<br />

<div class="card " id="loginCardDefault">
    <div class="container">
        <img class="card-img-top" src="~/img/SURenewLogo.svg.png" alt="Card image" id="loginCardDefaultImage"/>
        <div class="card-body">
            <form method="post">
                <div class="from-group">
                    <label for="email">Email:</label>
                    <input type="email" asp-for="Account.Email" class="form-control" id="email" placeholder="Enter email" name="email" />
                </div>
                <br />
                <div class="form-group">
                    <lable for="pwd">Password:</lable>
                    <input type="password" asp-for="Account.Password" class="form-control" id="pwd" placeholder="Enter password" name="pswd" />
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="remember"> Remember me
                    </label>
                    <br />
                    <button type="button" class="btn btn-link" id="formButtonDefault">Forget Password</button>
                </div>

                <button type="Submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
