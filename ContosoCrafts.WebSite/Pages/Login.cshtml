@page
@model SURenew.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row">
       <button type="button" class="btn btn-link" style="margin-left: 85%">Forget Password</button>
    </div>
</div>

<div class="container">
    <div class="card" style="width:400px">
        <img class="card-img-top" src="~/img/SURenewLogo.svg.png" alt="Card image" style="width:20%; margin-left:40%" />
        <div class="card-body">
            <form action="/Homepage">
                <div class="from-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" />
                </div>
                <br />
                <div class="form-group">
                    <lable for="pwd">Password:</lable>
                    <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pswd" />
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="remember"> Remember me
                    </label>
                </div>
                <button type="Submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>