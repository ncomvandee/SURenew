@page
@model SURenew.Pages.NewPostModel
@{
    ViewData["Title"] = "NewPost";
}

<div class="text-center" id="newPostHeading">
    <h1 class="display-4">New Post</h1>
</div>

<div class="container-fluid" id="myPostContainer">
    <div class="card card-columns" id="myPostCard">
        <p class="font-italic"> * => Required Fields</p>

        <label for="title">*Title: </label> <br />
        <input class="flex-shrink-1" type="text" id="title" name="title" /> <br>
        <br />

        <label for="desc">*Description: </label> <br />
        <textarea class="flex-shrink-1" id="desc" rows="4" cols="50"></textarea><br />
        <br />

        <label for="category">Category: </label><br />
        <select id="category" name="category">
            <option value="furniture">Furniture</option>
            <option value="lighting">Lighting</option>
            <option value="books">Books</option>
            <option value="electronics">Electronics</option>
            <option value="decorations">Decorations</option>
            <option value="office">Office Goods</option>
        </select><br />

        <br />
        <label for="imgupld">Upload Image: </label><br />
        <input type="file" id="imgupld" name="imgupld" accept="image/png, image/jpeg" /><br />
        <br />

        <br />
        <p>Image Preview: </p>
        <img src="~/img/default-image.jpg" alt="Default Image" style="max-height: 200px; width: auto" /> <br />

        <br />
        <button type="Submit" class="btn-primary justify-content-center">Submit</button>
    </div>


</div>








